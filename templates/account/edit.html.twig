{% extends 'base.html.twig' %}

{% block title %}
	Modifier mon Profil
{% endblock %}

{% block body %}
<div
	class="min-h-screen flex flex-col items-center justify-center bg-gray-100 py-12 px-4 sm:px-6 lg:px-8">
	<h1
		class="text-3xl font-bold text-gray-900 mb-8">
		Modifier mon Profil
	</h1>

	<div
		class="w-full max-w-lg bg-white p-8 rounded-lg shadow-md">
		{{ form_start(form, {'attr': {'class': 'space-y-6'}}
		) }}

		<!-- Nom d'utilisateur -->
		<div>
			{{ form_label(form.username, 'Nom d\'utilisateur', {'label_attr': {'class': 'text-gray-700 font-medium'}}) }}
                {{ form_widget(form.username, {'attr': {'class': 'w-full mt-2 p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.username, {'attr': {'class': 'text-red-500 text-sm'}}) }}
            </div>

            <!-- Prénom -->
            <div>
                {{ form_label(form.firstName, 'Prénom', {'label_attr': {'class': 'text-gray-700 font-medium'}}) }}
                {{ form_widget(form.firstName, {'attr': {'class': 'w-full mt-2 p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.firstName, {'attr': {'class': 'text-red-500 text-sm'}}) }}
            </div>

            <!-- Email -->
            <div>
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'text-gray-700 font-medium'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'w-full mt-2 p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.email, {'attr': {'class': 'text-red-500 text-sm'}}) }}
            </div>

            <!-- Adresse -->
            <div>
                {{ form_label(form.address, 'Adresse', {'label_attr': {'class': 'text-gray-700 font-medium'}}) }}
                {{ form_widget(form.address, {'attr': {'class': 'w-full mt-2 p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                {{ form_errors(form.address, {'attr': {'class': 'text-red-500 text-sm'}}) }}
            </div>

            <!-- Bouton de modification -->
            <button type="submit"
                class="w-full py-3 mt-4 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                Enregistrer les modifications
            </button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
