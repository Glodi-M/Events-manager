<h1 class="text-3xl font-bold mb-6">Liste des Événements</h1>

<!-- Conteneur des événements -->
<div id="events-container" class="flex flex-wrap gap-5">
	{% for event in events %}
		<div class="bg-white rounded-lg shadow-lg overflow-hidden w-64 mt-6 transition-transform transform hover:scale-105">
			<img src="{{ event.image }}" alt="Évènement 1" class="w-full h-48 object-cover">
			<div class="p-6">
				<h3 class="text-xl font-semibold text-gray-800">{{ event.title }}</h3>
				<p class="text-sm text-gray-500">{{ event.date | date('d/m/y') }}</p>
				<p class="text-sm text-gray-700 mt-2">{{ event.content }}</p>
				<a href="{{ path('events_show', {'id': event.id}) }}" class="text-green-600 font-bold text-sm mt-3 inline-block hover:text-green-800 transition-colors">Voir plus</a>
			</div>
		</div>
	{% endfor %}
</div>
