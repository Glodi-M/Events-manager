	<div class="flex justify-around flex-row items-center">
    <h1 class="text-6xl font-bold mb-5">Evénement</h1>

    {% if app.user %}
        {% if 'ROLE_ADMIN' in app.user.getRoles() %}
            <div class="flex gap-4 mb-5">
                <a href="{{ path('event_edit', {'id': event.id}) }}" class="bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 transition-colors duration-300">
                    Modifier
                </a>
                <a href="{{ path('event_delete', {'id': event.id}) }}" class="bg-red-500 text-white py-2 px-4 rounded-md hover:bg-red-600 transition-colors duration-300" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');">
                    Supprimer
                </a>
            </div>
        {% elseif 'ROLE_USER' in app.user.getRoles() %}
            <div class="flex gap-4 mb-5">
                <a href="" class="bg-green-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 transition-colors duration-300">
                    S'inscrire
                </a>
            </div>
        {% endif %}
    {% endif %}
</div>


