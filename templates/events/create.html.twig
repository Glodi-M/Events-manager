{% extends "base.html.twig" %}

{% form_theme formEvent 'bootstrap_5_layout.html.twig'%}

{% block body %}

	<div class="p-5">

		<h1 class="text-6xl mb-10">

			{% if editMode %}

				Modification de l'événement

			{% else %}

				Création de l'événement !

			{% endif %}

		</h1>

		{{ form_start(formEvent)}}

		{{form_row(formEvent.title,{'attr':{'placeholder':'Titre de l\'événement'}})}}
    {{form_row(formEvent.content,{'attr':{'placeholder':'Description de l\'événement'}})}}
		{{form_row(formEvent.image,{'attr':{'placeholder':'URL de l\'image d\'événement'}})}}
		{{form_row(formEvent.place,{'attr':{'placeholder':'Lieu de l\'événement'}})}}
    {{form_row(formEvent.date,)}}
	
    <button type="submit" class="btn btn-success">
    
    {% if editMode  %}

    Modifier

    {% else %}
    Ajouter l'événement

    </button>

    {% endif %}

	{{form_end(formEvent)}}
	</div>

{% endblock %}
